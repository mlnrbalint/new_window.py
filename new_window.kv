WindowManager:
    FirstWindow:
    SecondWindow:

<Button>:
    size_hint:1/8, 1/9
    font_size:20

<FirstWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            text: "Welcome to my calculator"
            font_size: 20

        Button:
            text: "To calculator"
            font_size: 20
            size_hint: 1, 1/2
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    orientation:"vertical"
    padding:4


    StackLayout:
        orientation:"lr-bt"
        Button:
            text: "Homescreen"
            font_size: 20
            size_hint: 1, 1/3
            on_release:
                app.root.current = "first"
                root.manager.transition.direction = "right"
        Button:
            text:"5"
            on_press:root.button_pressed(self)
        Button:
            text:"6"
            on_press:root.button_pressed(self)
        Button:
            text:"7"
            on_press:root.button_pressed(self)
        Button:
            text:"8"
            on_press:root.button_pressed(self)
        Button:
            text:"9"
            on_press:root.button_pressed(self)
        Button:
            text:"*"
            on_press:root.button_pressed(self)
        Button:
            text:"/"
            on_press:root.button_pressed(self)
        Button:
            text:"clear"
            on_press:display.text = ""
        Button:
            text:"0"
            on_press:root.button_pressed(self)
        Button:
            text:"1"
            on_press:root.button_pressed(self)
        Button:
            text:"2"
            on_press:root.button_pressed(self)
        Button:
            text:"3"
            on_press:root.button_pressed(self)
        Button:
            text:"4"
            on_press:root.button_pressed(self)
        Button:
            text:"+"
            on_press:root.button_pressed(self)
        Button:
            text:"-"
            on_press:root.button_pressed(self)
        Button:
            text:"."
            on_press:root.button_pressed(self)
        Button:
            text:"="
            size_hint:1, 1/10
            on_press:root.calculate()
        TextInput:
            id:display
            text:""
            readonly:True
            foreground_color:1,1,1,1
            background_color:0,0,0,1
            font_size:150
            multiline:False
            size_hint:1, 1/3
